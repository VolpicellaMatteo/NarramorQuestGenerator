                <option value="{{ place['title'] }}">{{ place['title'] }}</option>
            {% endfor %}
        </select><br> #}

        <label for="npc">NPC:</label>
        <select name="npc" id="npc">
            {% for nonplayer in npc %}
                <option value="{{ nonplayer['id'] }}">{{ nonplayer['id'] }}- {{ nonplayer['title'] }}</option>
            {% endfor %}
        </select><br>

        <label for="quest_type">Tipo di quest:</label>
            {% for quest in quest_type %}
                <input type="checkbox" name="quest_type" value="{{ quest['title'] }}">{{ quest['title'] }}</input><br>
            {% endfor %}
        

       


        <button type="submit" >Genera quest</button>
    </form>
{% endblock %}


